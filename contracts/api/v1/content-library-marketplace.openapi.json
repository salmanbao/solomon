{
  "openapi": "3.0.3",
  "info": {
    "title": "M09 Content Library Marketplace API",
    "version": "v1",
    "description": "Stable API contract for implemented M09 endpoints in Solomon."
  },
  "paths": {
    "/library/clips": {
      "get": {
        "summary": "List clips",
        "operationId": "contentLibraryListClips",
        "parameters": [
          {
            "name": "niche",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "duration_bucket",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "popularity_sort",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListClipsResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/Error"
          },
          "500": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/library/clips/{clip_id}": {
      "get": {
        "summary": "Get clip",
        "operationId": "contentLibraryGetClip",
        "parameters": [
          {
            "name": "clip_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetClipResponse"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/Error"
          },
          "500": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/library/clips/{clip_id}/preview": {
      "get": {
        "summary": "Get clip preview",
        "operationId": "contentLibraryGetClipPreview",
        "parameters": [
          {
            "name": "clip_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetClipPreviewResponse"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/Error"
          },
          "410": {
            "$ref": "#/components/responses/Error"
          },
          "500": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/library/clips/{clip_id}/claim": {
      "post": {
        "summary": "Claim clip",
        "operationId": "contentLibraryClaimClip",
        "parameters": [
          {
            "name": "clip_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Idempotency-Key",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClaimClipRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClaimClipResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/Error"
          },
          "404": {
            "$ref": "#/components/responses/Error"
          },
          "409": {
            "$ref": "#/components/responses/Error"
          },
          "500": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/library/clips/{clip_id}/download": {
      "post": {
        "summary": "Download clip",
        "operationId": "contentLibraryDownloadClip",
        "parameters": [
          {
            "name": "clip_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Idempotency-Key",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DownloadClipResponse"
                }
              }
            }
          },
          "403": {
            "$ref": "#/components/responses/Error"
          },
          "404": {
            "$ref": "#/components/responses/Error"
          },
          "410": {
            "$ref": "#/components/responses/Error"
          },
          "429": {
            "$ref": "#/components/responses/Error"
          },
          "500": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/library/claims": {
      "get": {
        "summary": "List user claims",
        "operationId": "contentLibraryListClaims",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListClaimsResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "Error": {
        "description": "Error response",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      }
    },
    "schemas": {
      "ClipStats": {
        "type": "object",
        "required": [
          "views_7d",
          "votes_7d",
          "engagement_rate"
        ],
        "properties": {
          "views_7d": {
            "type": "integer"
          },
          "votes_7d": {
            "type": "integer"
          },
          "engagement_rate": {
            "type": "number"
          }
        }
      },
      "Clip": {
        "type": "object",
        "required": [
          "clip_id",
          "title",
          "niche",
          "duration_seconds",
          "preview_url",
          "exclusivity",
          "claim_limit",
          "stats"
        ],
        "properties": {
          "clip_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "niche": {
            "type": "string"
          },
          "duration_seconds": {
            "type": "integer"
          },
          "preview_url": {
            "type": "string"
          },
          "exclusivity": {
            "type": "string"
          },
          "claim_limit": {
            "type": "integer"
          },
          "stats": {
            "$ref": "#/components/schemas/ClipStats"
          }
        }
      },
      "ListClipsResponse": {
        "type": "object",
        "required": [
          "items"
        ],
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Clip"
            }
          },
          "next_cursor": {
            "type": "string"
          }
        }
      },
      "GetClipResponse": {
        "type": "object",
        "required": [
          "item"
        ],
        "properties": {
          "item": {
            "$ref": "#/components/schemas/Clip"
          }
        }
      },
      "GetClipPreviewResponse": {
        "type": "object",
        "required": [
          "clip_id",
          "preview_url",
          "expires_at"
        ],
        "properties": {
          "clip_id": {
            "type": "string"
          },
          "preview_url": {
            "type": "string"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ClaimClipRequest": {
        "type": "object",
        "required": [
          "request_id"
        ],
        "properties": {
          "request_id": {
            "type": "string"
          }
        }
      },
      "ClaimClipResponse": {
        "type": "object",
        "required": [
          "claim_id",
          "clip_id",
          "status",
          "expires_at"
        ],
        "properties": {
          "claim_id": {
            "type": "string"
          },
          "clip_id": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time"
          },
          "replayed": {
            "type": "boolean"
          }
        }
      },
      "Claim": {
        "type": "object",
        "required": [
          "claim_id",
          "clip_id",
          "status",
          "expires_at"
        ],
        "properties": {
          "claim_id": {
            "type": "string"
          },
          "clip_id": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ListClaimsResponse": {
        "type": "object",
        "required": [
          "items"
        ],
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Claim"
            }
          }
        }
      },
      "DownloadClipResponse": {
        "type": "object",
        "required": [
          "download_url",
          "expires_at",
          "remaining_downloads"
        ],
        "properties": {
          "download_url": {
            "type": "string"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time"
          },
          "remaining_downloads": {
            "type": "integer"
          },
          "replayed": {
            "type": "boolean"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
