{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "solomon/contracts/events/v1/authz.policy_changed.schema.json",
  "title": "authz.policy_changed",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "user_id",
    "role_id",
    "action_type"
  ],
  "properties": {
    "user_id": {
      "type": "string",
      "minLength": 1
    },
    "admin_id": {
      "type": "string",
      "minLength": 1
    },
    "role_id": {
      "type": "string",
      "minLength": 1
    },
    "permission_key": {
      "type": "string",
      "minLength": 1
    },
    "action_type": {
      "type": "string",
      "enum": [
        "role_granted",
        "role_revoked",
        "delegated"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    }
  }
}
