{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "solomon/contracts/events/v1/campaign.budget_updated.schema.json",
  "title": "campaign.budget_updated",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "source_service",
    "trace_id",
    "schema_version",
    "partition_key_path",
    "partition_key",
    "data"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "event_type": {
      "const": "campaign.budget_updated"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "source_service": {
      "const": "campaign-service"
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "partition_key_path": {
      "const": "campaign_id"
    },
    "partition_key": {
      "type": "string",
      "minLength": 1
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "campaign_id",
        "budget_total",
        "budget_spent",
        "budget_reserved",
        "budget_remaining"
      ],
      "properties": {
        "campaign_id": {
          "type": "string",
          "minLength": 1
        },
        "budget_total": {
          "type": "number",
          "minimum": 0
        },
        "budget_spent": {
          "type": "number",
          "minimum": 0
        },
        "budget_reserved": {
          "type": "number",
          "minimum": 0
        },
        "budget_remaining": {
          "type": "number"
        }
      }
    }
  }
}
