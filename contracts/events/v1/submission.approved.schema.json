{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "solomon/contracts/events/v1/submission.approved.schema.json",
  "title": "submission.approved",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "source_service",
    "trace_id",
    "schema_version",
    "partition_key_path",
    "partition_key",
    "data"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "event_type": {
      "const": "submission.approved"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "source_service": {
      "const": "submission-service"
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "partition_key_path": {
      "const": "submission_id"
    },
    "partition_key": {
      "type": "string",
      "minLength": 1
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "submission_id",
        "campaign_id",
        "creator_id",
        "approved_at"
      ],
      "properties": {
        "submission_id": {
          "type": "string",
          "minLength": 1
        },
        "campaign_id": {
          "type": "string",
          "minLength": 1
        },
        "creator_id": {
          "type": "string",
          "minLength": 1
        },
        "user_id": {
          "type": "string",
          "minLength": 1,
          "description": "Deprecated alias for creator_id"
        },
        "approved_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
