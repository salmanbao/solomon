{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "solomon/contracts/events/v1/vote.updated.schema.json",
  "title": "vote.updated",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "source_service",
    "trace_id",
    "schema_version",
    "partition_key_path",
    "partition_key",
    "data"
  ],
  "properties": {
    "event_id": { "type": "string", "minLength": 1 },
    "event_type": { "const": "vote.updated" },
    "occurred_at": { "type": "string", "format": "date-time" },
    "source_service": { "const": "voting-engine" },
    "trace_id": { "type": "string", "minLength": 1 },
    "schema_version": { "type": "integer", "minimum": 1 },
    "partition_key_path": { "const": "submission_id" },
    "partition_key": { "type": "string", "minLength": 1 },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "vote_id",
        "submission_id",
        "campaign_id",
        "user_id",
        "vote_type",
        "weight",
        "retracted",
        "occurred_at"
      ],
      "properties": {
        "vote_id": { "type": "string", "minLength": 1 },
        "submission_id": { "type": "string", "minLength": 1 },
        "campaign_id": { "type": "string", "minLength": 1 },
        "round_id": { "type": "string" },
        "user_id": { "type": "string", "minLength": 1 },
        "vote_type": { "type": "string", "enum": ["upvote", "downvote"] },
        "weight": { "type": "number" },
        "retracted": { "type": "boolean" },
        "reason": { "type": "string" },
        "reputation_score_snapshot": { "type": "number" },
        "occurred_at": { "type": "string", "format": "date-time" }
      }
    }
  }
}
