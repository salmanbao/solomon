    "partition_key_path",
    "partition_key",
    "data"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "event_type": {
      "const": "fee.calculated"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "source_service": {
      "const": "platform-fee-engine"
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "partition_key_path": {
      "const": "submission_id"
    },
    "partition_key": {
      "type": "string",
      "minLength": 1
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "calculation_id",
        "submission_id",
        "user_id",
        "campaign_id",
        "gross_amount",
        "fee_rate",
        "fee_amount",
        "net_amount",
        "calculated_at"
      ],
      "properties": {
        "calculation_id": {
          "type": "string",
          "minLength": 1
        },
        "submission_id": {
          "type": "string",
          "minLength": 1
        },
        "user_id": {
          "type": "string",
          "minLength": 1
        },
        "campaign_id": {
          "type": "string",
          "minLength": 1
        },
        "gross_amount": {
          "type": "number",
          "minimum": 0
        },
        "fee_rate": {
          "type": "number",
          "minimum": 0
        },
        "fee_amount": {
          "type": "number",
          "minimum": 0
        },
        "net_amount": {
          "type": "number",
          "minimum": 0
        },
        "calculated_at": {
          "type": "string",
          "format": "date-time"
        },
        "source_event_id": {
          "type": "string"
        }
      }
    }
  }
}
